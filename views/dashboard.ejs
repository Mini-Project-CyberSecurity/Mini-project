<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
      }
      .container {
        max-width: 800px;
        margin-top: 50px;
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      h1 {
        margin-bottom: 20px;
      }
      .alert {
        margin-bottom: 20px;
      }
      .file-upload {
        margin-bottom: 20px;
      }
      footer {
        margin-top: 30px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Welcome to the Dashboard</h1>
      <h2>You are logged in as <%= user.username %>.</h2>

      <% if (errorMessage.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= errorMessage %>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% if (successMessage.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>

      <form
        action="/upload"
        method="POST"
        enctype="multipart/form-data"
        class="file-upload"
      >
        <label for="file" class="form-label">Upload File</label>
        <input
          type="file"
          name="file"
          id="file"
          class="form-control"
          required
        />
        <button type="submit" class="btn btn-primary mt-2">Upload File</button>
      </form>

      <div class="d-flex justify-content-between">
        <a href="/files" class="btn btn-secondary">View Uploaded Files</a>
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <footer>
      <p>&copy; 2024 Secure Cloud. All Rights Reserved.</p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/crypto-js.js"></script>
    <script>
      // Function to save cookie to local storage
      function saveSessionToLocalStorage() {
        const cookieValue = getCookie("session") // Function to get the cookie value
        if (cookieValue) {
          const encryptedCookie = CryptoJS.AES.encrypt(
            cookieValue,
            "aakdknfjnfjnaenanfenefsb"
          ).toString()
          localStorage.setItem("session", encryptedCookie)
        }
      }

      // Function to get a cookie by name
      function getCookie(name) {
        const value = `; ${document.cookie}`
        const parts = value.split(`; ${name}=`)
        if (parts.length === 2) return parts.pop().split(";").shift()
      }

      // Call the function to save session when the page loads or after login
      window.onload = saveSessionToLocalStorage
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
